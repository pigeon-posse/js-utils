	"description": "✨ Utilities for faster and more agile development by PIGEONPOSSE™",
	"type": "module",
	"private": true,
	"workspaces": [
		"src/packages/*"
	],
	"engines": {
		"node": "^14.18.0 || >=16.0.0",
		"pnpm": ">=3"
	},
	"scripts": {
		"start": "pnpm i",
		"scripts": "pnpm pes",
		"release": "node .utils/release-it.js && node .utils/release.js",
		"dev": "pnpm eslint && pnpm htmlhint && pnpm stylelint",
